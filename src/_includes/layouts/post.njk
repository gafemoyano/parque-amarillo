---
layout: layouts/default
---

<div class="container max-w-4xl px-6 mt-16">
  <div>
    <h1 class="text-2xl font-light text-center lg:text-4xl">{{title}}</h1>
    <p class="text-sm font-medium leading-6 text-center text-muted">
      <time>
        {{ date | readableDate }}
                by
        <a>{{ author }}</a>
      </time>
    </p>
  </div>
  <hr class="w-16 mx-auto my-8 border-b-2 border-accent" />
  <article class="my-4 prose lg:prose-base prose-stone prose-headings:font-light prose-headings:text-body">
    {{ content | safe }}
  </article>
</div>