---
layout: layouts/default
---

<div class="flex flex-col items-center px-6 mt-16">
  <div class="max-w-[65ch]">
    {% if cover %}
      <div class="mb-8 w-full">
        <img class="rounded object-cover object-center w-[768px] h-[400px]" src="{{ cover }}" alt="El camino a Isla Sigma">
        <p class="mt-2 text-center text-gray-600 text-xs [&>a]:text-primary">
          {{ cover_alt | safe }}
        </p>
      </div>
    {% endif %}
    <div class="w-full mx-auto">
      <h1 class="font-bold text-2xl font-display md:text-4xl">{{title}}</h1>
      <p class="mx-auto text-sm font-medium leading-6 text-muted">
        <time>
          {{ date | readableDate }}
                  by
          </time>
        {{ author|join(", ")}}
      </p>
      <hr class="w-16  my-8 border-b-2 border-accent"/>
      <article class="my-4 prose lg:prose-base prose-stone prose-headings:font-light prose-headings:text-body">
        {{ content | safe }}
      </article>
    </div>
  </div>
</div>