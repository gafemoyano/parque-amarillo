---
layout: layouts/default
---

<div class="container max-w-4xl px-6 mt-16">
  <div>
    <h1 class="text-5xl font-bold text-center text-secondary">{{title}}</h1>
    <p class="mt-1 text-base font-medium leading-6 text-center text-accent">
      <time>
        {{ date | readableDate }}
                by
        <a>{{ author }}</a>
      </time>
    </p>
  </div>
  <hr class="w-16 mx-auto my-8 border-b-4 border-black">
  <article class="px-4 mx-auto my-4 prose md:px-2 lg:prose-lg">
    {{ content | safe }}
  </article>
</div>