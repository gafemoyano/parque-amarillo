---
layout: layouts/default
---

<div class="container mt-16">
  <div class="w-full mx-auto max-w-[65ch] mt-16">
    <h1 class="font-bold text-4xl font-headline md:text-5xl text-neutral-900">{{title}}</h1>

    <hr class="w-16  my-8 border-b-2 border-accent"/>
    <article class="font-body my-16 prose-base lg:prose-lg  prose-a:font-semibold prose-a:underline">
      {{ content | safe }}
    </article>

    {% if recommendations %}
    <section class="my-16">
      <h2 class="font-headline font-bold text-2xl md:text-3xl text-neutral-900 mb-8">Recomendaciones</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% for rec in recommendations %}
          {% if loop.first %}
          <div class="md:col-span-2 flex flex-col sm:flex-row items-center gap-6 border border-neutral-200 rounded-lg p-6">
            {% if rec.image %}
            <img
              src="{{ rec.image }}"
              alt="{{ rec.title }}"
              class="w-[200px] h-[200px] object-cover rounded-lg shrink-0"
            />
            {% endif %}
            <div>
              <h3 class="font-headline text-xl font-bold">{{ rec.title }}</h3>
              <p class="font-body text-base mt-2 text-neutral-600">{{ rec.description | safe }}</p>
            </div>
          </div>
          {% else %}
          <div class="border border-neutral-200 rounded-lg overflow-hidden">
            {% if rec.image %}
            <img
              src="{{ rec.image }}"
              alt="{{ rec.title }}"
              class="w-full h-[275px] object-cover"
            />
            {% endif %}
            <div class="p-6">
              <h3 class="font-headline text-xl font-bold">{{ rec.title }}</h3>
              <p class="font-body text-base mt-2 text-neutral-600">{{ rec.description | safe }}</p>
            </div>
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </section>
    {% endif %}
  </div>
</div>