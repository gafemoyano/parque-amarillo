<div class="grid grid-cols-1 lg:gap-12 gap-10 md:grid-cols-3">
  {% for post in postslist | reverse %}
    <article class="w-full  @container">
      <div class="relative pb-1/2 aspect-video">
        <a class="cursor-pointer" href="{{post.url | url}}">
          <img sizes="auto" loading="lazy" eleventy:widths="225,480,640" src="{{post.data.cover}}" alt="" class="absolute w-full h-full object-cover">
        </a>
      </div>
      <h2 class="text-xl font-medium font-headline leading-none @2xs:text-2xl text-neutral-800 cursor-pointer mt-4">
        <a class="inline-flex w-full" href="{{ post.url | url }}">{{post.data.title}}</a>
      </h2>
      {# {% for tag in post.data.tags | filterTagList %}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="text-xs font-semibold tracking-wide uppercase transition-all duration-150 ease-in text-muted hover:text-primary">{{ tag }}</a>
      {% endfor %} #}
      <p class=" font-body text-sm @2xs:text-base text-neutral-700 mt-4">
        {{post.data.description | truncate(120)}}
      </p>
      <ul class="flex gap-1 items-center mt-2">
        {% for author in post.data.author %}
          <li>
            <a class="text-neutral-500 font-sans text-sm" href="/autores/{{author | slug}}">
              {{author}}
            </a>
            {% if not loop.last %}
              <span class="text-neutral-500">â€¢</span>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </article>
  {% endfor %}
</div>