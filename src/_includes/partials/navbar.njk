<div class="w-full bg-white border-b-2 border-black shadow-md">
  <nav
    class="flex flex-wrap items-center justify-center w-full max-w-3xl px-4 py-4 mx-auto lg:justify-between sm:px-2"
    x-data="{ isOpen: false }"
    @keydown.escape="isOpen = false"
  >
    <!--Logo etc-->
    <div class="flex items-center">
      <a href="/" class="text-2xl leading-none text-body hover:text-secondary font-display">
        El parque <span class="text-primary">amarillo</span>
      </a>
    </div>

    <!--Toggle button (hidden on large screens)-->
    <button
      @click="isOpen = !isOpen"
      type="button"
      class="block px-2 ml-auto lg:hidden text-accent hover:text-accent focus:outline-none focus:text-accent"
      :class="{ 'transition transform-180': isOpen }"
      aria-label="Menu"
    >
      <svg
        class="w-6 h-6 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewbox="0 0 24 24"
      >
        <path
          x-show="isOpen"
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
/>
        <path
          x-show="!isOpen"
          fill-rule="evenodd"
          d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
/>
      </svg>
    </button>

    <!--Menu-->
    <div
      class="flex-grow w-full text-center lg:flex lg:items-center lg:w-auto"
      :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
      @click.away="isOpen = false"
      x-show.transition="true"
    >
      {% if navigation.items %}

        <ul
        class="items-center justify-end flex-1 pt-6 space-x-2 lg:pt-0 list-reset lg:flex"
      >
          {% for item in navigation.items %}
            <li>
              <a
                @click="isOpen = false"
                class="inline-block px-4 py-2 text-sm font-semibold transition-all duration-150 ease-in text-secondary hover:text-accent focus:text-accent"
                href="{{ item.url }}">
                {{ item.text }}
              </a>
            </li>
          {% endfor %}
        </ul>

      {% endif %}
    </div>
  </nav>
</div>